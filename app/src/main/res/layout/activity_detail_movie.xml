<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    tools:context=".DetailMovie">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mv_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/img_mv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/img_mv"
            android:layout_width="150dp"
            android:layout_height="240dp"
            tools:ignore="ContentDescription"
            android:cropToPadding="true"
            app:layout_constraintTop_toBottomOf="@+id/mv_detail_title"
            app:layout_constraintBottom_toTopOf="@+id/mv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mv_detail_voteAverage"/>

        <TextView
            android:id="@+id/mv_detail_voteAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#008477"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/mv_detail_title"
            app:layout_constraintStart_toEndOf="@+id/img_mv" />

        <TextView
            android:id="@+id/mv_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:text="@string/release"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/mv_detail_voteAverage"
            app:layout_constraintBottom_toTopOf="@+id/mv_detail_release"
            app:layout_constraintStart_toEndOf="@+id/img_mv"/>
        <TextView
            android:id="@+id/mv_detail_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/mv_release"
            app:layout_constraintBottom_toTopOf="@+id/mv_language"
            app:layout_constraintStart_toEndOf="@+id/img_mv"/>

        <TextView
            android:id="@+id/mv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:text="@string/language"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/mv_detail_voteAverage"
            app:layout_constraintBottom_toTopOf="@+id/mv_detail_language"
            app:layout_constraintStart_toEndOf="@+id/img_mv"/>
        <TextView
            android:id="@+id/mv_detail_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="14sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/mv_language"
            app:layout_constraintStart_toEndOf="@+id/img_mv"/>

        <TextView
            android:id="@+id/mv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/img_mv"
            app:layout_constraintBottom_toTopOf="@+id/mv_detail_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/mv_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mv_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_favorite_empty"
            app:layout_constraintTop_toBottomOf="@+id/mv_detail_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>